<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/dp_110"
    android:layout_height="@dimen/dp_75"
    android:layout_margin="@dimen/dp_5"
    android:background="@color/white"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_2"
        android:background="@color/white">


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_32"
            android:src="@mipmap/m_01"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_icon_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:maxLines="1"
            android:text="孙俪"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/iv_icon"
            app:layout_constraintRight_toRightOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/iv_icon" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center"
            android:text="57岁"
            android:textColor="@color/gray_text"
            app:layout_constraintLeft_toLeftOf="@id/iv_icon"
            app:layout_constraintRight_toRightOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_icon_name" />

        <TextView
            android:id="@+id/tv_bed_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:text="01床"
            android:textColor="#5b90bc"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            app:layout_constraintTop_toTopOf="@id/iv_icon" />

        <TextView
            android:id="@+id/tv_accommodation_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:text="M10000000000"
            android:textColor="@color/gray_text"
            app:layout_constraintLeft_toRightOf="@id/tv_bed_id"
            app:layout_constraintTop_toTopOf="@id/iv_icon" />

        <TextView
            android:id="@+id/tv_section"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            android:text="骨科"
            android:textColor="@color/gray_text"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_bed_id" />


        <TextView
            android:id="@+id/tv_doctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:text="主管医生:"
            android:textColor="@color/gray_text"
            app:layout_constraintBottom_toBottomOf="@id/tv_section"
            app:layout_constraintLeft_toRightOf="@id/tv_section"
            app:layout_constraintTop_toTopOf="@id/tv_section" />

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="王医生"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tv_doctor"
            app:layout_constraintLeft_toRightOf="@id/tv_doctor"
            app:layout_constraintTop_toTopOf="@id/tv_doctor" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="下肢左腿骨折......."
            android:textColor="@color/gray_text"
            app:layout_constraintLeft_toLeftOf="@id/tv_section"
            app:layout_constraintRight_toRightOf="@id/tv_doctor_name"
            app:layout_constraintTop_toTopOf="@id/tv_icon_name" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_bottom"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_12"
            android:background="#ededed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <ImageView
                android:id="@+id/iv_assess"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>