<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_case"
        layout="@layout/case_title_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hospital_id"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="住院号:"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_case" />

    <EditText
        android:id="@+id/et_hospital_id"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:hint="请输入住院号"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/tv_hospital_id"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="姓名:"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toRightOf="@id/et_hospital_id"
        app:layout_constraintTop_toBottomOf="@id/include_case" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:hint="请输入住姓名"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="性别:"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toRightOf="@id/et_name"
        app:layout_constraintTop_toBottomOf="@id/include_case" />

    <EditText
        android:id="@+id/login_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:drawableRight="@mipmap/ic_launcher"
        android:hint="请选择性别"
        android:padding="5dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/tv_sex"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />


</android.support.constraint.ConstraintLayout>