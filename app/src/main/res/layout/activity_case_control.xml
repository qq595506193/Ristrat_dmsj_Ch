<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/include_case"
        layout="@layout/case_title_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hospital_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_7"
        android:text="住院号:"
        android:textSize="@dimen/sp_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_case" />

    <EditText
        android:id="@+id/et_hospital_id"
        android:layout_width="@dimen/dp_55"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"

        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/tv_hospital_id"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="姓名:"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/et_hospital_id"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="@dimen/dp_40"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"

        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="性别:"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/et_name"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <EditText
        android:id="@+id/et_sex"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_12"
        android:background="@drawable/edit_bg"
        android:paddingLeft="@dimen/dp_5"
        android:text="全部"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/tv_sex"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <android.support.v7.widget.AppCompatSpinner

        android:id="@+id/sp_sex"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="3"
        android:background="@mipmap/down_arrows"
        android:dropDownWidth="@dimen/dp_50"
        android:entries="@array/sex"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintRight_toRightOf="@id/et_sex"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id"
        app:theme="@style/myDropTheme" />


    <TextView
        android:id="@+id/tv_bed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="床位:"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/sp_sex"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <EditText
        android:id="@+id/et_bed"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"

        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/tv_bed"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <TextView
        android:id="@+id/tv_danger_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:maxLines="1"
        android:text="危险等级:"
        android:textSize="@dimen/sp_6"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/et_bed"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <EditText
        android:id="@+id/et_danger_level"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"

        android:paddingLeft="@dimen/dp_5"
        android:text="全部"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/tv_danger_level"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sp_danger_level"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:background="@mipmap/down_arrows"
        android:dropDownWidth="@dimen/dp_50"
        android:entries="@array/danger_level"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintRight_toRightOf="@id/et_danger_level"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id"
        app:theme="@style/myDropTheme" />

    <RadioGroup
        android:id="@+id/rg_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/tv_hospital_id"
        app:layout_constraintLeft_toRightOf="@id/et_danger_level"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_hospital_id">

        <RadioButton
            android:id="@+id/rb_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="本科室" />

        <RadioButton
            android:id="@+id/rb_element"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="本单元" />

    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_patient_list"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hospital_id" />


</android.support.constraint.ConstraintLayout>