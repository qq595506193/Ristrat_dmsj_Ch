<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_30"
    android:background="#3b4046"
    android:gravity="center_vertical"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_10"
        android:src="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="上一页"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:src="@mipmap/tuichu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:src="@mipmap/xiaoxi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_close" />

    <TextView
        android:id="@+id/tv_login_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:text="王医生"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iv_message"
        app:layout_constraintRight_toLeftOf="@id/iv_message" />

    <ImageView
        android:id="@+id/iv_login_icon"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_2"
        android:src="@mipmap/yisheng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_login_name" />

    <TextView
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="消息列表"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>